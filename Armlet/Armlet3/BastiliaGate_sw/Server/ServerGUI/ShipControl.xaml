<UserControl x:Class="ServerGUI.ShipControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="ShipControl_OnLoaded">
    <GroupBox x:Name="MainGroupBox">
        <StackPanel Orientation="Vertical">
            <Label x:Name="GatesLabel" /> <Label x:Name="OnlineLabel"></Label>
            <WrapPanel Orientation="Horizontal" MaxWidth="310" x:Name="BoardStackPanel"></WrapPanel>
            <WrapPanel Orientation="Horizontal" MaxWidth="310" x:Name="HitStackPanel">
                <Label>Взрыв силой...</Label>
                <Button Click="HitClick">1</Button>
                <Button Click="HitClick">2</Button>
                <Button Click="HitClick">3</Button>
            </WrapPanel>
        </StackPanel>
    </GroupBox>
</UserControl>
